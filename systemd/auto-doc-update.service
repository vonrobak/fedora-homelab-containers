[Unit]
Description=Auto-Documentation Generator
Documentation=file:///home/patriark/containers/docs/97-plans/PROJECT-C-AUTO-DOCUMENTATION-REVISED.md
After=network.target

[Service]
Type=oneshot
WorkingDirectory=/home/patriark/containers
ExecStart=/home/patriark/containers/scripts/auto-doc-orchestrator.sh
StandardOutput=journal
StandardError=journal

# Optional: Auto-commit if docs changed
